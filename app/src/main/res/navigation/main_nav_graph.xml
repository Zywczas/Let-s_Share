<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/welcomeFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.zywczas.letsshare.fragments.login.presentation.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/actionLoginToFriendsFragment"
            app:destination="@id/friendsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/actionLoginToRegisterFragment"
            app:destination="@id/registerFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.zywczas.letsshare.fragments.register.presentation.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" />

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.zywczas.letsshare.fragments.welcome.presentation.WelcomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_welcome">
        <action
            android:id="@+id/actionWelcomeToLoginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/welcomeFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/actionWelcomeToFriendsFragment"
            app:destination="@id/friendsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/welcomeFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/friendsFragment"
        android:name="com.zywczas.letsshare.fragments.friends.presentation.FriendsFragment"
        tools:layout="@layout/fragment_friends" />
    <fragment
        android:id="@+id/groupsFragment"
        android:name="com.zywczas.letsshare.fragments.groups.presentation.GroupsFragment"
        tools:layout="@layout/fragment_groups" >
        <action
            android:id="@+id/actionGroupsToGroupDetailsFragment"
            app:destination="@id/groupDetailsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/groupDetailsFragment"
        android:name="com.zywczas.letsshare.fragments.groupdetails.presentation.GroupDetailsFragment"
        tools:layout="@layout/fragment_group_details">
        <argument
            android:name="group"
            app:argType="com.zywczas.letsshare.model.Group" />
        <action
            android:id="@+id/actionShowAddFriendToGroupDialog"
            app:destination="@id/addFriendToGroupDialog" />
    </fragment>
    <dialog
        android:id="@+id/addFriendToGroupDialog"
        android:name="com.zywczas.letsshare.fragments.groups.domain.AddGroupMemberDialog"
        android:label="AddFriendToGroupDialog" >
        <argument
            android:name="groupId"
            app:argType="string" />
    </dialog>
</navigation>