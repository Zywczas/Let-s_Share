<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LetsShare" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/myColorPrimary</item>
        <item name="colorPrimaryVariant">@color/myColorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/myColorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/myColorSecondary</item>
        <item name="colorSecondaryVariant">@color/myColorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/myColorOnSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/myTextColor</item>
        <item name="toolbarStyle">@style/Widget.MyToolbarStyle</item>
        <item name="drawerArrowStyle">@style/Widget.MyDrawerArrowStyle</item>
    </style>

    <style name="Widget.MyToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/myToolbarTitleTextColor</item>
    </style>

    <style name="Widget.MyDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/myDrawerArrowColor</item>
    </style>

</resources>