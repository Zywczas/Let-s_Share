<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.App.MyToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">?attr/colorOnPrimary</item>
<!--        todo sprawdzic-->
    </style>

    <style name="Widget.App.MyDrawerArrow" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">?attr/colorOnPrimary</item>
    </style>

    <style name="Widget.App.MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">?attr/textInputLayoutHintColor</item>
    </style>

    <style name="Widget.App.MyOutLinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">?attr/outlinedButtonStrokeColor</item>
        <item name="android:textColor">?attr/outlinedButtonTextColor</item>
    </style>

    <style name="Widget.App.MySnackBar" parent="Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">@color/snackBarBackground</item>
    </style>

    <style name="Widget.App.MySnackBarTextView" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/snackBarText</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Widget.App.LargeListItemHeader" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/headerLargeTextSizeListItem</item>
        <item name="android:textColor">?attr/listItemHeaderColor</item>
    </style>

</resources>