<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LetsShare" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/text</item>
        <item name="toolbarStyle">@style/Widget.App.MyToolbar</item>
        <item name="drawerArrowStyle">@style/Widget.App.MyDrawerArrow</item>
        <item name="textInputStyle">@style/Widget.App.MyTextInputLayout</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.App.MyOutLinedButton</item>
        <item name="snackbarStyle">@style/Widget.App.MySnackBar</item>
        <item name="snackbarTextViewStyle">@style/Widget.App.MySnackBarTextView</item>
    </style>

    <style name="Widget.App.MyToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/toolbarTitleText</item>
    </style>

    <style name="Widget.App.MyDrawerArrow" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/drawerArrow</item>
    </style>

    <style name="Widget.App.MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/hint</item>
    </style>

    <style name="Widget.App.MyOutLinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/outlinedButtonStroke</item>
        <item name="android:textColor">@color/outlinedButtonText</item>
    </style>

    <style name="Widget.App.MySnackBar" parent="Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">@color/snackBarBackground</item>
    </style>

    <style name="Widget.App.MySnackBarTextView" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/snackBarText</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>